{% extends 'base.html.twig' %}

{% block title %}Hello PrendreRdvController!{% endblock %}

{% block body %}
<style>
  #page-prendre-rdv {
    background-color: #f4f4f4;
    width: fit-content;
    margin: 0 auto;
    padding: 15px 50px;
  }
</style>
<div id="page-prendre-rdv">
<h1>Prendre Rendez vous</h1>

{{ form_start(form) }}

    {{ form_row(form.dateRdv, { 'attr': {'class': 'form-control'} }) }}

    {{ form_row(form.description, { 'attr': {'class': 'form-control'} }) }}

    <div style="margin-top:30px">
        <button type="submit" class="btn btn-primary">Valider</button>
    </div>

{{ form_end(form) }}
</div>
{% endblock %}