{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>ACCUEIL</h1>
<br><br>
<div class="card">
    <a href="{{path("app_prendre_rdv")}}" class="btn btn-primary" id-"btn_termine">Prendre un Rendez-vous :</a>
  </div>
</div>
<br><br>
<div class="card">
  <div class="card-header">
    Rendez-Vous Ouverts
  </div>
  <div class="card-body">
    <h5 class="card-title">Liste de vos Rendez-vous :</h5>
    
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date de Rendez-vous</th>
            <th scope="col">Id médecin</th>
            <th scope="col">Description</th>
            <th scope="col">Statut</th>
        </tr>
    </thead>
    <tbody>
    {% for rdv_ouvert in rdv %}
        <tr>
            <th scope="row">{{ rdv_ouvert.id }}</th>
            <td>{{ rdv_ouvert.dateRdv|date('Y-m-d') }}</td>  {# Assurez-vous que "dateRdv" est le bon nom de propriété #}
            <td>{{ rdv_ouvert.idMedecin }}</td>  {# Si "medecin" est une relation dans l'entité #}
            <td>{{ rdv_ouvert.description }}</td>
            <td>{{ rdv_ouvert.statut }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

  </div>
</div>
<br><br>
<div class="card">
  <div class="card-header">
    Rendez-Vous Terminés
  </div>
  <div class="card-body">
    <h5 class="card-title">Liste des rendez-vous terminés :</h5>
    




  </div>
</div>

{% endblock %}
