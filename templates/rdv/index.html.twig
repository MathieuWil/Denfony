{% extends 'base.html.twig' %}

{% block title %}Hello RdvController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div id="page-rdv-detail">

{% if is_granted("ROLE_PATIENT") %}

    <h1>Votre Rendez-vous</h1>

    <p>Date du RDV</p>
    <p>{{ rdv.dateRdv|date('Y-m-d') }}</p>

    <p>Description du problème</p>
    <p>{{ rdv.description }}</p>

    <p>Medecin</p>
  {% if medecin %}
    <p>{{ medecin.nom }} {{ medecin.prenom }}</p>
  {% else %}
    <p>Le Rdv n'est pas encore pris en charge</p>
  {% endif %}

  <a href="{{ path("app_annulerRdv", {"id" : rdv.id}) }}">Annuler RDV</a>

{% endif %}

{% if is_granted("ROLE_MEDECIN") %}
    <h1>Rendez-vous de {{ patient.nom }} {{ patient.prenom }}</h1>

    <p>Date du RDV</p>
    <p>{{ rdv.dateRdv|date('Y-m-d') }}</p>

    <p>Description du problème</p>
    <p>{{ rdv.description }}</p>
{% endif %}
</div>

{% endblock %}
